{
    "name": "mmtaheridev/reginephp",
    "description": "Regine is a fluent PHP library for building regular expressions (regex) in a readable, modular way.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Mohammad Mahdi Taheri",
            "email": "mmtaheri.dev@gmail.com"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "phpstan/phpstan": "^2.1",
        "tightenco/duster": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Regine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
