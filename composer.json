{
    "name": "mmtaheridev/reginephp",
    "description": "An expressive PHP library for crafting regular expressions fluently.",
    "type": "library",
    "license": "MIT",
    "keywords": ["regex", "regular-expressions", "fluent", "php", "pattern-matching", "validation", "builder", "chainable"],
    "homepage": "https://github.com/mmtaheridev/reginephp",
    "support": {
        "issues": "https://github.com/mmtaheridev/reginephp/issues",
        "source": "https://github.com/mmtaheridev/reginephp"
    },
    "authors": [
        {
            "name": "Mohammad Mahdi Taheri",
            "email": "mmtaheri.dev@gmail.com",
            "homepage": "https://github.com/mmtaheridev"
        }
    ],
    "require": {
        "php": "^8.3",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "pestphp/pest": "^3.8",
        "phpstan/phpstan": "^2.1",
        "tightenco/duster": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Regine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test-coverage": "pest --coverage",
        "analyse": "phpstan analyse",
        "format": "duster fix",
        "lint": "duster lint"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
